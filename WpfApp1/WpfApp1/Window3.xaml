<Window x:Class="WpfApp1.Window3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Your Password" Height="150" Width="300" ResizeMode="NoResize" Background="Plum"
        KeyDown="Enter">
    <Grid>
        <TextBox MouseDoubleClick="Password_MouseClick" MaxLength="10" Name="password"  HorizontalAlignment="Left" Height="121" TextWrapping="Wrap" FontSize="29px" Text="Please write up to 10 chars. Then hit Enter" VerticalAlignment="Top" Width="294"  Background="Plum" />

    </Grid>
</Window>
